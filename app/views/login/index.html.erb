<%= stylesheet_link_tag "application.css" %>
<%= stylesheet_link_tag "login.scss" %>
<div class="loginBox">
	<h1>Strona Logowania</h1>
		<%= form_for(:login_controller, url: login_path) do |f| %>
			<p>
				<%= f.label :text %>:
				<%= f.text_field :text %>		
			</p>
			<p>
				<%= f.label :password %>:
				<%= f.password_field :password %>	
			</p>	
			<p>
				<%= f.submit :Zaloguj %>
			</p>
		<% end %>
</div>


